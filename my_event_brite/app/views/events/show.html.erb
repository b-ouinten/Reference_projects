<div class="container-fluid">
  <div class="jumbotron bg-white mt-3 p-3">
    <div class="row m-2">
      <div class="col-xs col-md-7 d-flex flex-column justify-content-between event-pretty-border text-dark mb-2 mb-md-0 py-2">
        <div>
          <h6 class="text-uppercase font-weight-bold"><%= @event.title %></h6>
          <p> <%= @event.description %></p>
        </div>
        <div class="d-flex flex-row justify-content-between align-items-center">
          <div>
            <p class="mb-0"><span class="font-weight-bold">There are :</span> <%= @event.participants.count %> participants currently.</p>
            <p class="mb-0"><span class="font-weight-bold">You can contact the creator at :</span> <%= @event.admin.email %></p>
          </div>
          <div>
            <% if !user_signed_in? || is_able_to_register_to?(@event) %>
              <%= link_to 'Join event', new_event_attendance_path(@event.id), class: 'btn btn-success btn-block btn-sm' %>
            <% end %>
            <% if !user_signed_in? || is_event_admin_of?(@event) %>
              <%= link_to 'My space event', event_attendances_path(@event.id), class: 'btn btn-success btn-block btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs col-md-5 align-self-center pr-md-0">
        <div class="card bg-warning text-dark">
          <div class="card-header font-weight-bold">
            Event details
          </div>
          <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text"><span class="font-weight-bold">Start date :</span> <%= @event.start_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
            <p class="card-text"><span class="font-weight-bold">End date :</span> <%= @event.end_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
            <p class="card-text"><span class="font-weight-bold">Duration : </span><%= @event.duration %> minutes</p>
            <p class="card-text"><span class="font-weight-bold">Location : </span><%= @event.location %></p>
            <p class="card-text"><span class="font-weight-bold">Price : </span><%= @event.price %> â‚¬</p>
            <div class="d-flex flex-column justify-content-center align-items-center mr-1 mb-1">
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>