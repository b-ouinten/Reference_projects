<div class="container-fluid">
  <div class="jumbotron col-6 bg-white offset-3 my-3 p-3">
    <div class="row attendances-pretty-border m-2">
      <div class="col d-flex flex-column justify-content-center align-content-center py-2">
        <h4 class="text-center text-dark text-uppercase"><%= @event.title %></h4>
        <%= link_to 'Edit event', edit_event_path(@event.id), class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
  
  <% if @event.attendances.count != 0 %>
    <div class="card">
      <div class="card-header alert alert-success h6 mb-0">
        These are all the participant to the event :
      </div>
      <ul class="list-group list-group-flush">
        <% @event.attendances.each do |attendance| %>
          <li class="box-shadow list-group-item pt-0 pb-2 d-flex flex-row justify-content-between align-items-center bg-white">
            <div class="mt-3">
              <p class="text-card text-dark"><%= attendance.participant.first_name %> <%= attendance.participant.last_name %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
  <div class="text-center">
    There are no participants to your event yet !
  </div>
  <% end %>
</div>