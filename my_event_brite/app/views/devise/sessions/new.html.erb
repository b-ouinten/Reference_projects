<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      
      <h4 class="mb-3 font-weight-normal text-center">Login</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'col-form-label' %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'col-form-label' %><br/>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-0">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Login", class: "btn btn-lg btn-info btn-block btn-sm" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>