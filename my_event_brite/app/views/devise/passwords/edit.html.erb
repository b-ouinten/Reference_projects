<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      
      <h4 class="mb-3 font-weight-normal text-center">Change your password</h4>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      
      <div class="form-group">
        <%= f.label :password, "New password", class: 'col-form-label' %>
        <% if @minimum_password_length %>
        <span>(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-sm' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: 'col-form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm' %>
      </div>
      
      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-lg btn-info btn-block btn-sm" %>
      </div>
      <% end %>
      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>      
  </div>      
</div>      