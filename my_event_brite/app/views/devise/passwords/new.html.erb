<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      
      <h4 class="mb-3 font-weight-normal text-center">Forgot your password ?</h4>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: 'col-form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-info btn-block btn-sm" %>
        </div>
      <% end %>
      <div class='mt-3'>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>