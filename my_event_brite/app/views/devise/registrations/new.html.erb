<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      
      <h4 class="mb-3 font-weight-normal text-center">Sign up</h4>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :first_name, "First name", class: 'col-form-label' %>
          <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Last name", class: 'col-form-label' %>
          <%= f.text_field :last_name, autofocus: true, class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email", class: 'col-form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'col-form-label' %>
          <% if @minimum_password_length %>
            <span class='col-form-label'>(<%= @minimum_password_length %> characters minimum)</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: 'col-form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-lg btn-info btn-block btn-sm" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>