<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-xs col-sm-8 offset-sm-2">
      <p>Here you can edit your informations.</p>
      <%= form_for @user do |f| %>
        <div class="row">
          <div class="col-xs col-md-6">
            <div class="form-group">
              <div>
                <label for="first_name" class="col-form-label">First name : </label>
                <%= f.text_field :first_name, class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
          <div class="col-xs col-md-6">
            <div class="form-group">
              <div>
                <label for="first_name" class="col-form-label">Last name : </label>
                <%= f.text_field :last_name, class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs col-md-12">
            <div class="form-group">
              <div>
                <label for="description" class="col-form-label">Description : </label>
                <%= f.text_area :description, rows: 5, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <%= submit_tag "Update", class: "btn btn-info btn-sm" %>
      <% end %>

      <% if @user.errors.any? %>
        <div class="mt-3 alert alert-danger">
          <p>User update faild for the following reason(s) :</p>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %>.</li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>