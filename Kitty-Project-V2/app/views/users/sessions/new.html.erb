<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
           <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
         <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
           <div class="form-group">
             <%= f.label :email, "Email", class: 'col-form-control' %>
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
           </div>
           <div class="form-group">
             <%= f.label :password, "Mot de passe", class: 'col-form-control' %>
             <br />
             <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
           </div>
            <% if devise_mapping.rememberable? %>
            <div class="field">
                 <%= f.check_box :remember_me %>
                 <%= f.label :remember_me, "Se souvenir de moi", class: 'col-form-control' %>
            </div>
        <% end %>
        <div class="actions mt-5">
            <%= f.submit "Connexion", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
