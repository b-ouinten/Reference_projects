<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
        <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email, "Email", class: 'col-form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "Mot de passe", class: 'col-form-label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation du mot de passe", class: 'col-form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Je m'inscris !", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>