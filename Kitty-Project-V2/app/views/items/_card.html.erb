<div class="container-fluid mt-4">
    <h1 class="h3 mb-3 font-weight-normal text-center">Les photos de chatons disponibles actuellement :</h1><br>
    <div class="row justify-content-center">
    <%Item.all.sort_by{|obj| obj.id}.each do |x|%>
    <div class="col-auto mb-4">
      <div class="card mb-4">
        <h3 class="card-header"> Photo nº<%=x.id%></h3>
        <%if x.image.attached?%>
          <%= image_tag x.image, alt: "Card image", width: 325, height: 210 %>
        <%else%>
          <p>=== Image ===</p>
        <%end%>
        <div class="card-body">
          <p class = "card-text"><%=x.title%></p>
          <p class="card-text">Prix de la photo: <%=x.price%> euros</p>
        </div>
        <div class="card-body">
          <a href="items/<%=x.id%>" class="card-link">Accéder à la fiche <a>
              <%= link_to 'Ajouter au panier', item_cart_items_path(x.id), id: "linkto", class:"btn btn-secondary btn-sm border border-secondary", method: :post, remote: true%>
        </div>
      </div>
    </div>
  <%end %>
</div> 