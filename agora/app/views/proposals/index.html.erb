<div class = "container">
  <h2 class="text-center"><b>Les meilleures propositions du moment</b></h2>
  <div class="col-md-6">
    <h3 class="text-center"><b>Paris</b></h3>
    <div class="card box">
      <div class="card-content">
      <div class="table-responsive">
        <table class="table datatables-s text-wrap" cellspacing="0" width="100%" style="width:100%">
          <thead>
            <tr>
              <th class="disabled-sorting"></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%@proposal_paris.each do |x|%>
            <tr>
              <td>
                <%if x.picture.attached?%>
                  <%= image_tag x.picture, alt: "Card image", width: 200, style: "height: auto" %>
                <%else%>
                  <%= image_tag("home.jpg", width: 200, style: "height: auto")%>
                <%end%>
              </td>
              <td>
                <p class="text-wrap"><%= x.title %></p>
                <p><a class="btn btn-primary btn-round btn-sm" href= "<%= proposal_path(x) %>" role="button">
                  <i class="material-icons" style="font-size: 15px">visibility</i> Voir la proposition
                </a>
                <span class="badge"><%= x.category.name %></span>
                </p>
              </td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h3 class="text-center"><b>Lyon</b></h3>
    <div class="card box">
      <div class="card-content">
      <div class="table-responsive">
        <table class="table datatables-s text-wrap" cellspacing="0" width="100%" style="width:100%">
          <thead>
            <tr>
              <th class="disabled-sorting"></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%@proposal_lyon.each do |x|%>
            <tr>
              <td>
                <%if x.picture.attached?%>
                <%= image_tag Proposal.find(x.id).picture, alt: "Card image",  width: 170, style: "height: auto"%>
                <%else%>
                  <%= image_tag("home.jpg", width: 170, style: "height: auto")%>
                <%end%>                  
              </td>
              <td>
                <p class='text-wrap'><%= x.title %></p>
                <a class="btn btn-primary btn-round btn-sm" href= "/proposals/<%=x.id%>" role="button">
                  <i class="material-icons" style="font-size: 15px">visibility</i> Voir la proposition
                </a>
                <span class="badge badge-primary"><%= x.category.name %></span>
              </td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>
